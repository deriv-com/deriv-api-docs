{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Connect Status (response)",
    "description": "Return the status of V1 client connected to V2",
    "type": "object",
    "required": [
        "echo_req",
        "msg_type"
    ],
    "properties": {
        "connect_status": {
            "title": "connect_status",
            "description": "Status of V1 client on V2.",
            "type": "object",
            "additionalProperties": false,
            "required": [
                "status"
            ],
            "properties": {
                "status": {
                    "description": "Current status of V1 client on V2.",
                    "type": [
                        "null",
                        "string"
                    ],
                    "enum": [
                        "pending",
                        "complete",
                        "failed"
                    ]
                }
            }
        },
        "echo_req": {
            "description": "Echo of the request made.",
            "type": "object"
        },
        "msg_type": {
            "description": "Action name of the request made.",
            "type": "string",
            "enum": [
                "connect_status"
            ]
        },
        "req_id": {
            "description": "Optional field sent in request to map to response, present only when request contains `req_id`.",
            "type": "integer"
        }
    }
}
